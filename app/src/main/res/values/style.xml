<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalcButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/custom_font</item>
        <item name="android:backgroundTint">@color/btn_color</item>
        <item name="android:textSize">@dimen/btn_calc_text_size</item>
    </style>

    <style name="CalcButton.Action">
        <item name="android:backgroundTint">#856F6F</item>
    </style>

    <style name="CalcButton.Number">
        <item name="android:backgroundTint">@color/dark_green</item>
    </style>

    <style name="CalcButton.Operator">
        <item name="android:backgroundTint">@color/btn_color</item>
    </style>



    <style name="CalcButton.DarkMode" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/custom_font</item>
        <item name="android:backgroundTint">#604F11</item>
        <item name="android:textSize">@dimen/btn_calc_text_size</item>
    </style>

    <style name="CalcButton.Action.DarkMode">
        <item name="android:backgroundTint">#9C0B00</item>
    </style>

    <style name="CalcButton.Number.DarkMode">
        <item name="android:backgroundTint">#8C5C16</item>
    </style>

    <style name="CalcButton.Operator.DarkMode">
        <item name="android:backgroundTint">@color/color_button</item>
    </style>




</resources>