<resources xmlns:tools="http://schemas.android.com/tools">


    <!-- Base application theme. -->
    <style name="Theme.Calculator23rdJune" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/custom_font</item>
        <item name="materialButtonStyle">@style/CalcButton</item>
        <item name="calcActionButton">@style/CalcButton.Action</item>
        <item name="calcNumberButton">@style/CalcButton.Number</item>
        <item name="calcOperatorButton">@style/CalcButton.Operator</item>
    </style>

    <style name="Theme.Calculator23rdJune.DarkMode" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/custom_font</item>
        <item name="materialButtonStyle">@style/CalcButton</item>
        <item name="calcActionButton">@style/CalcButton.Action</item>
        <item name="calcNumberButton">@style/CalcButton.Number</item>
        <item name="calcOperatorButton">@style/CalcButton.Operator</item>
    </style>



</resources>