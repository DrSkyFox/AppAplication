<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyCoolStyle">
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/color_button</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">italic</item>
    </style>


    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_button</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="colorAccent">@color/color_buttont</item>
    </style>

    <style name="CalcButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/custom_font</item>
        <item name="android:backgroundTint">@color/btn_color</item>
        <item name="android:textSize">@dimen/btn_calc_text_size</item>
    </style>

    <style name="CalcButton.Action">
        <item name="android:backgroundTint">#FFC107</item>
        <item name="android:textColor">#100C00</item>
    </style>

    <style name="CalcButton.Number">
        <item name="android:backgroundTint">#918E8E</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CalcButton.Operation">
        <item name="android:backgroundTint">#752121</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>


    <style name="CalcButton.Action.DarkMode">
        <item name="android:backgroundTint">#002A5C</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="CalcButton.Number.DarkMode">
        <item name="android:backgroundTint">#636363</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CalcButton.Operation.DarkMode">
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
    </style>




</resources>